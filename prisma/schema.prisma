// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id       Int       @id @unique @default(autoincrement())
  name     String
  email    String    @unique
  password String
  recipes  Recipes[]
}

model Recipes {
  id          Int       @id @unique @default(autoincrement())
  email       String
  name        String
  ingredients Json
  preparation String
  diffculty   String
  duration    String
  img         String
  comments    Comment[]
  Users       Users?    @relation(fields: [usersId], references: [id])
  usersId     Int?
}

model Comment {
  id        Int     @id @unique @default(autoincrement())
  name      String
  text      String
  Recipes   Recipes @relation(fields: [recipesId], references: [id])
  recipesId Int
}
